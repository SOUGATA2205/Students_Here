<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/edit2"

    tools:context=".dasboard">

    <TextView
        android:id="@+id/StudentNae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="24sp"
        android:padding="13dp"
        android:background="#2196F3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginBottom="20dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/StudentNae"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">


            <ImageButton
                android:id="@+id/btnStudent1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/studentcontent"
                android:background="@android:color/transparent"
                android:contentDescription="s"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <ImageButton
                android:id="@+id/attendence"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/attendenc"
                android:background="@android:color/transparent"
                android:contentDescription="s"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Attendence"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <ImageButton
                android:id="@+id/list_sub"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/assinment"
                android:background="@android:color/transparent"
                android:contentDescription="assin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject List"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <ImageButton
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/res"
                android:background="@android:color/transparent"
                android:layout_marginTop="50dp"
                android:contentDescription="res"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>